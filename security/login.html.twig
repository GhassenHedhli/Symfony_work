{%extends 'base.html.twig'%}
{% block body %}
<h1>Connexion</h1>
<form action="{{path('security_login')}}" method="post">
    <div class="form_group">
        <input placeholder='Adresse mail' type="text" class="form_control" required name="_username">
        <br>
        <br>
        <input placeholder='Mot de passe' type="password" class="form_control" required name="_password">

    </div>
    <br>
    <div class="form_group">
        <button type="submit" class="btn btn-success">
            Connexion
        </button>

    </div>
</form>


{% endblock %}